




<link rel="stylesheet" href="/stylesheets/login.css">
<link rel="stylesheet" href="/stylesheets/post.css">


<section class="signup-form">

  <form action="/api/posts" enctype="multipart/form-data" method="post" class="callout text-center">
    <h2>Sell Your Stuff</h2>
    <div class="floated-label-wrapper">
      <label for="Title">Title</label>
      <input type="text" id="full-name" placeholder="Title" name="title" />
    </div>
    <div class="floated-label-wrapper">
      <label for="Price">Price</label>
      <input type="text" placeholder="Price" name="price" />
    </div>
    <div class="floated-label-wrapper">
      <label for="Description">Description</label>
      <textarea class="field-style" placeholder="Item Description" name="description"></textarea>
    </div>
    <div class="floated-label-wrapper">
      <label for="file-to-upload">Select image:</label>
      <input type="file" name="file-to-upload">
    </div>
    <input class="button expanded" type="submit" value="Add Item">
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Items for Sale</h2>
  <ol>
    {{#each posts}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

