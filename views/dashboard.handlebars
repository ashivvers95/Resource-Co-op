<link rel="stylesheet" href="/stylesheets/post.css">



<form action="/api/posts" enctype="multipart/form-data" method="post" class="form-style-9 new-post-form">
  <ul>
    <li>
      <input type="text" class="field-style field-split align-left" placeholder="Title" name="title" />
    </li>
    <li>
      <input type="text" class="field-style field-split align-left" placeholder="Price" name="price" />
    </li>
    <li>
      <textarea class="field-style" placeholder="Item Description" name="description"></textarea>
      <label for="file-to-upload">Select image:</label>
      <input type="file" name="file-to-upload">

      <!--<input type="file" id="img" name="img" accept="image/*">-->
      </div>
    </li>
    <li>
      <input type="submit" value="Add Item" />
    </li>
  </ul>
</form>



{{#if posts.length}}
<section>
  <h2>Your Items for Sale</h2>
  <ol>
    {{#each posts}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

